      <inertia ixx="0.0395416666667" ixy="0" ixz="0" 
        iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>

    <collision name="collision_base_link">
      <origin xyz="-0.111 0 0.003" rpy="0 0 0" />
      <geometry>
        <box size="0.57 0.52 0.006"/>
      </geometry>
    </collision>
  </link>

</robot>
