<?xml version='1.0'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macro for castor wheel -->
  <xacro:macro name="castor_wheel" params="name origin_xyz">
    <!-- Castor wheel base (cube) -->
    <link name="${name}_b1_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.05 0.05 0.0015" />
        </geometry>
        <material name="dark_gray" />
      </visual>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.028125" />
        <inertia ixx="5.864648437499999e-06" ixy="0" ixz="0"
            iyy="5.864648437499999e-06" iyz="0" izz="1.1718749999999999e-05" />
      </inertial>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.05 0.05 0.0015" />
        </geometry>
      </collision>
    </link>
    <joint name="${name}_b1_joint" type="fixed">
      <origin xyz="${origin_xyz}" rpy="0 0 0" />
      <parent link="csupport_link" />
      <child link="${name}_b1_link" />
    </joint>

    <!-- Castor wheel base (cylinder) -->
    <link name="${name}_b2_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://romaa_description/meshes/romaa_castor_base.stl" />
        </geometry>
        <material name="dark_gray" />
      </visual>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.022726972589783227" />
        <inertia ixx="5.243689744256557e-06" ixy="0" ixz="0"
            iyy="4.149252628753352e-06" iyz="0" izz="2.389246986591684e-06" />
      </inertial>
      <collision>
        <origin xyz="0 0 -0.025" rpy="0 0 0" />
        <geometry>
          <cylinder length="0.050" radius="0.012" />
        </geometry>
      </collision>
    </link>
    <joint name="${name}_rot1_joint" type="continuous">
      <dynamics damping="0" friction="0.5" /> 
      <origin xyz="0 0 0.00075" rpy="0 0 0" />
      <parent link="${name}_b1_link" />
      <child link="${name}_b2_link" />
      <axis xyz="0 0 1" />
    </joint>

    <!-- Castor wheel -->
    <link name="${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://romaa_description/meshes/romaa_castor_wheel.stl" />
        </geometry>
        <material name="light_gray" />
      </visual>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.0233673699785761" />
        <inertia ixx="4.260422817439314e-06" ixy="0" ixz="0"
            iyy="7.362120181084859e-06" iyz="0" izz="4.260422817439261e-06" />
      </inertial>
      <collision>
        <origin xyz="0 0 0" rpy="${pi / 2} 0 0" />
        <geometry>
          <cylinder length="0.016" radius="0.0245" />
        </geometry>
      </collision>
    </link>
    <joint name="${name}_rot2_joint" type="continuous">
      <dynamics damping="0" friction="1" /> 
      <origin xyz="-0.026 0 -0.04363" rpy="0 0 0" />
      <parent link="${name}_b2_link" />
      <child link="${name}_link" />
      <axis xyz="0 1 0" />
    </joint>
  </xacro:macro>

</robot>
